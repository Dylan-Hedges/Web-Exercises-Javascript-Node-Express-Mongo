<!--"../" - When we moved our index into the campgrounds folder this became the default, we need to move back out a level and then into the partials folder-->
<% include ../partials/header %>

    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>Welcome to YelpCamp</h1>
                <p>View our hand-picked campgrounds from all over the world.</p>
                <p>
                    <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
                </p>
            </div>
        </header>
        
        <!--style="display:flex; flex-wrap: wrap;" lines up images on rows even when they are different heights/widths-->
        <div class="row text-center" style="display:flex; flex-wrap: wrap;">
            <!--campgrounds is the object we passed from app.js, campground is new and is the individual camp when looping through the campgrounds object-->
            <% campgrounds.forEach(function(campground){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <!--Need to put < %= %> inside of the <img src="">-->
                        <img src="<%= campground.image %>">
                        <div class="caption">
                            <h4><%= campground.name %></h4>
                        </div>
                        <p>
                            <!--Creates a new link using id - each individual campground has an id automatically generated by Mongo that we use-->
                            <a href="/campgrounds/<%=campground._id %>" class="btn btn-primary">More Info</a>
                        </p>
                    </div>
                </div>
            <% }); %>
        </div>    
    
    </div>
<!--"../" is required for the footer as well-->
<% include ../partials/footer %>
