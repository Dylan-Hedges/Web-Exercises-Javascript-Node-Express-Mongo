<% include ../partials/header %>
<!--NOTE - campground Id's are generated each time we restart the app, you have to go back to the main page and reload a campground to access the comments form-->
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add New Comment to <%= campground.name %></h1>
        
        <div style="width: 30%; margin: 25px auto">
            <!--name="" is used to grab data from "req.body" e.g "req.body.name"-->
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <!--"comment[text]" - When we extract req.body.comment it will contain both text and author-->
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" placeholder="author">
                </div>
                <div class="form-group">
                    <!--"btn-block" make button take up entire line-->
                    <!--"btn-primary" make button blue-->
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Back</a>
        </div>
        
    </div>
</div>

<% include ../partials/footer %>